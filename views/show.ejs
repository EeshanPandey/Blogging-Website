<%- include("partials/header") %>
<div class="ui main text container">
	<div class = "ui huge header">
		<%= blog.title %>
	</div>
	
	<div class = "ui top attached segment">
		<div class= "item">
			<img class="ui centered rounded image" src=" <%= blog.image %>">
			
		</div>
		<br>
		<div class="content">
			<span><%= blog.created.toDateString() %></span>
		</div>
		<br>
		<div class="description">
			<p style="font-size: 24px; display: inline;">
		<%- blog.body %>
			</p>
			
		<div class="ui small star rating" style="float:right;"></div>
		
		</div>
		<hr>
		
		
		<form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" style="display: inline-block;">
			<button class="ui red basic button">
				Delete
			</button>
		</form>
		<form action="/blogs/<%= blog._id %>/edit" style="display: inline-block;">
			<button class="ui yellow basic button">
				Edit
			</button>
		</form>
	</div>
	
	
	
	
</div>
<%- include("partials/footer") %>